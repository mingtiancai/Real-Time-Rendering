{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}build/linux/x86_64/release/",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/src/examples/learnOpenGL/chapter1/coordinate",
            "environment": [],
